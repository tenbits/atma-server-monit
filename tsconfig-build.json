{
    "files": ["src/index.ts"],
    "exclude": ["node_modules", "www"],
    "compilerOptions": {
        "outDir": "ts-temp",
        "lib": ["es2015", "es2015.promise", "es2016", "dom", "es2017"],
        "typeRoots": [
            "node_modules/@types",
            "typings",
            "typings/globals"
        ],
        "types": ["node"],
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}
